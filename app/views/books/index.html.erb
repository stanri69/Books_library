<div class="row">
  <% @books.each do |book| %>
    <h2><%= link_to book.title, book, :class => "btn btn-success" %></h2>
    <div class="col-md-3">
      <a href="/books/"<%= book.id %>>
        <%= image_tag book.book_img.url(:book_index) %>
      </a>
    </div>
    <p><%= book.author %></p>
  <% end %>
</div>
