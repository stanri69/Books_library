<%= simple_form_for @book do |f| %>
  <%= f.file_field :book_img %>
  <%= f.input :book_category, :collection => { 'Fantasy' => 'Fantasy', 'Detective' => 'Detective', 'Classic' => 'Classic' } %>
  <%= f.input :title, label: "Book Title" %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit %>
<% end %>